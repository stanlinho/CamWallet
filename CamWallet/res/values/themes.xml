<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Ewalletactionbar</item>
        <item name="android:buttonStyle">@style/BlueButtons</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>
    
    <!-- Button styles -->
    <style name="BlueButtons"
           parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/custom_blue_button</item>
        <item name="android:padding">8sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    
    <!-- Big buttons -->
    <style name="BigButtons" parent="BlueButtons">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">24sp</item>
        <item name="android:paddingRight">24sp</item>
    </style>
    
    <!-- Icon buttons -->
    <style name="IconButtons" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
	
    <style name="PINcodeStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">#FFFFFF</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="TextAppearanceTitle" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
    
    <style name="TextAppearanceHeading" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
    
    <style name="TextAppearanceTableEntry" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>
    
    <style name="Textbox" parent="@android:style/Widget.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">left</item>
    </style>
    
</resources>
