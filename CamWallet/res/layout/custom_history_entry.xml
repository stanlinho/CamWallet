<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical|left" 
    android:padding="10dp" >

    <TextView
        android:id="@+id/user_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_profile"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/user_profile"
        android:text="Medium Text"
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceMedium"
         />

    <ImageView
        android:id="@+id/user_profile"
        android:layout_width="@dimen/image_normal"
        android:layout_height="@dimen/image_normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_fundstransfer" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_fullname"
        android:layout_below="@+id/user_fullname"
        android:text="Small Text"
        android:textColor="#000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
