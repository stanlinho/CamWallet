<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00b27e" />
         <gradient android:angle="-90" android:startColor="#00a575" android:endColor="#009a6d"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00b27e" />
         <solid android:color="#00cb90"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00b27e" />
         <gradient android:angle="-90" android:startColor="#00b27e" android:endColor="#00a575" />            
     </shape>
 </item>
</selector>