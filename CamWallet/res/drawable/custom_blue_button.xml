<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#3598db" />
         <gradient android:angle="-90" android:startColor="#2d95cd" android:endColor="#2f87c2"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#3598db" />
         <solid android:color="#2f87c2"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#3598db" />
         <gradient android:angle="-90" android:startColor="#3598db" android:endColor="#2d95cd" />            
     </shape>
 </item>
</selector>